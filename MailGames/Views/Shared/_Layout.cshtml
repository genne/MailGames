<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Mail Games by Christian Genne</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @Styles.Render("~/Content/bootstrap/base")
        <link href="/Content/less/site.less" rel="stylesheet"/>
    </head>
    <body data-servertime="@(DateTime.Now)">
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Mail Games</a>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class=""><a href="@Url.Action("StartGame", "Home")">New Game</a></li>
                            <li class="">
                                            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                            </li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                }
            </div>
        </div>
        <div id="wrap">
            <div class="container">
                @RenderBody()
            </div>
        </div>
        
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
        {
            @Html.AntiForgeryToken()
        }
        
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        
        <div id="fb-root"></div>
<script>
  window.fbAsyncInit = function() {
    FB.init({
        appId: '221909777970862', // App ID
      status     : true, // check login status
      cookie     : true, // enable cookies to allow the server to access the session
      xfbml      : true  // parse XFBML
    });

    // Additional initialization code here
  };

  // Load the SDK Asynchronously
  (function(d){
     var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement('script'); js.id = id; js.async = true;
     js.src = "//connect.facebook.net/en_US/all.js";
     ref.parentNode.insertBefore(js, ref);
   }(document));
</script>

        <script src="/Scripts/site.js" type="text/javascript"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
