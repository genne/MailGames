@model MailGames.Models.IndexHomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Hello, <a href="@Url.Action("User", new{ Id = Model.UserId })">@Model.UserName</a>!</h1>
    <p>Welcome to Mail Games!</p>
    <p>
        <a class="btn btn-primary btn-lg" href="@Url.Action("StartGame")">Start new game »</a>
    </p>
</div>

<div class="row">
    <div class="col-md-4">
    <h2>Your turn</h2>
    @Html.Partial("_GameList", Model.YourTurnGames)
    </div>

    <div class="col-md-4">
    <h2>Opponents turn</h2>
    @Html.Partial("_GameList", Model.OpponentTurnGames)
    </div>

    <div class="col-md-4">
    <h2>Finished games</h2>
    @Html.Partial("_GameList", Model.FinishedGames)
    </div>
</div>