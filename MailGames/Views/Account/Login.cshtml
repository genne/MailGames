@model MailGames.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<section id="loginForm">
    <h2>Existing user</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
    @using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new{ @class="form-inline"})) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
        <legend>Or enter login and password</legend>
  <div class="form-group">
    <label class="sr-only" for="username">Login</label>
    <input type="email" class="form-control" name="username" placeholder="Login">
  </div>
  <div class="form-group">
    <label class="sr-only" for="password">Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>
        <div class="checkbox">
            <label>
                <input type="checkbox"> Remember me
            </label>
        </div>
  <button type="submit" class="btn btn-default">Sign in</button>
            </fieldset>
    }
</section>

<h2>New User?</h2>
<p>
    @Html.ActionLink("Register", "Register") if you don't have an account.
</p>


<section class="social" id="socialLoginForm">
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
